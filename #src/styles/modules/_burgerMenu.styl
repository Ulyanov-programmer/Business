.burger-menu {
	position fixed;
	top 0;
	right -100%;
	z-index 4 !important;
	block-size 100% 100%;
	font-size 30px;
	color #fff;
	flex-set column nowrap;
	transition right .5s ease;

	@media (min-width $burgerMenuShowWidth) {
		display none;
	}

	&.active {
		right 0;
	}

	&__body {
		flex-set column nowrap;
		overflow auto;
		background rgb(252, 217, 0);
		min-height 100%;

		ul {
			margin 0 auto;
			width 100%;

			.fs-element {
				&:not(:last-child) {
					border-bottom 1px solid #000;
				}

				a {
					text-align: center;
					block-size 100%;
					padding 25px 0 25px 0;
					color #000;
				}
			}
		}
	}
}

.burger-btn {
	z-index 5;
	display block;
	cursor pointer;
	padding 10px;

	@media (min-width $burgerMenuShowWidth) {
		display none;
	}

	&__svg {
		* {
			transform-origin left;
			transform-box fill-box;
			transition all .5s ease;
		}
	}

	&.active {
		.burger-btn {
			&__rect-top {
				transform rotate(45deg);
			}

			&__rect-center {
				hide();
				height 0;
			}

			&__rect-bottom {
				transform rotate(-45deg);
			}
		}
	}
}