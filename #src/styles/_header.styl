.header {
	position relative;
	z-index 5;
	--text-top-color #000;
	--text-bottom-color #000;
	--border-color #EBEBEB;

	&_bottom-shadow {
		box-shadow 0 10px 20px rgba(0, 0, 0, .05);
	}

	&__body {
		width 100%;

		>* {
			padding 20px;
		}
	}

	&__top {
		display grid;
		grid-template-columns 1fr 1fr 1fr;
		justify-items center;
		align-items center;
		border-bottom 1px solid var(--border-color);

		@media (max-width 600px) {
			grid-template-columns auto 1fr;
		}
	}

	&__bottom {
		flex-set row nowrap;
		justify-content center;
		color var(--text-bottom-color);

		@media (max-width $burgerMenuShowWidth) {
			padding 0;
		}
	}

	&._top-blue {
		--text-top-color #fff;

		.header__top {
			background #035397;
			color #fff;
		}
	}

	&._bottom-blue {
		--text-bottom-color #fff;

		.header__bottom {
			background #001E6C;
		}
	}
}

.navmenu {
	@media (max-width $burgerMenuShowWidth) {
		display none;
	}

	&__body {
	}

	&__list {
		flex-set row wrap;

		li {
			:not(:last-child) {
				margin-right 10px;
			}

			a, button {
				padding 4px 8px 4px 8px;
				font-size rem(18);
				color inherit;
				transition all .2s ease 0s;
			}
		}
	}

	&__ref {
		flex-set column nowrap;
		overflow hidden;

		&:hover, &:focus {
			&:after {
				transform translate3d(0, 0, 0);
			}
		}

		&:after {
			display inline-block;
			height 2px;
			background #dadada;
			width 100%;
			transform translate3d(-130%, 0, 0);
			transition all .2s ease-in 0s;
			content '';
		}
	}

	&__menu-btn {
		&.active {
			svg {
				transform rotate(180deg) translateY(20%);
			}
		}

		svg {
			transition all .3s ease;
			transform translateY(-40%);
		}
	}

	&__menu {
		color #000;
		transform translate3d(7px, 0, 0);
	}
}

.logo {
	z-index 10;
	color var(--text-top-color);
	font-size 36px;
	font-weight bold;
}

.telephone {
	display grid;
	grid-template 'icon text' auto 'icon number' auto / 28px 1fr;
	gap 0 11px;
	color inherit;
	justify-self start;

	@media (max-width 768px) {
		background #fff;
		padding 5px;
		border-radius 4px;
	}

	&._mob-hidded {
		@media (max-width 600px) {
			display none;
		}
	}

	&__icon {
		grid-area icon;

		path {
		}
	}

	&__text {
		grid-area text;
		font-family Inter;
		font-size rem(12);
	}

	&__number {
		grid-area number;
		font-size rem(16);
	}
}

.right-block {
	flex-set row nowrap;
	justify-self end;
	notLastChildMargin 0 40px 0 0;

	@media (max-width $burgerMenuShowWidth) {
		notLastChildMargin 0 0 0 0;
	}
}

.socials {
	flex-set row nowrap;
	align-items center;
	notLastChildMargin 0 30px 0 0;

	@media (max-width $burgerMenuShowWidth) {
		display none;
	}
}

.social {
	path {
		fill var(--text-top-color);
	}
}

.lang-menu {
	color inherit;

	&__view-wrapper {
		display grid;
		grid-template 'flag title' auto 'flag name' auto / 30px 1fr;
		align-items center;
		justify-items start;
		gap 0 5px;
	}

	&__lang-icon {
		grid-area flag;
	}

	&__lang-name {
		grid-area name;
	}

	&__text {
		grid-area title;
	}

	&__submenu {
		width 100%;
		top 110% !important;

		span {
			display block;
			padding 5px;

			&:hover, &:focus {
				text-decoration underline;
			}
		}
	}

	@media (max-width $burgerMenuShowWidth) {
		display none;
	}
}
