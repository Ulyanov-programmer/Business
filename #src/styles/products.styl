@import 'other/_vars';
@import 'other/_mixins';

.our-products {
	&__body {
		display grid;
		grid-template-columns repeat(auto-fill, minmax(400px, 1fr));
		gap 15px;

		@media (max-width 1300px) {
			grid-template-columns repeat(auto-fill, minmax(300px, 1fr));
		}

		@media (max-width 768px) {
			grid-template-columns repeat(auto-fill, minmax(250px, 1fr));
		}
	}
}

.product-preview {
	border 1px solid #DFDFDF;
	color inherit;

	&__body {
		block-size 100%;
		text-align center;
		background #fff;
	}

	&__img-preview {
	}

	&__title {
		padding 25px 30px;
	}
}

.product-details {
	&__body {
		display grid;
		grid-template 'slider sidebar' auto 'tabs sidebar' auto / 1fr 300px;
		gap 30px 70px;

		@media (max-width 1300px) {
			grid-template 'slider sidebar' auto 'tabs sidebar' auto / 1fr 250px;
		}

		@media (max-width 1050px) {
			grid-template 'slider sidebar' auto 'tabs sidebar' auto / 1fr 200px;
		}

		@media (max-width 950px) {
			grid-template 'slider' auto 'tabs' auto 'sidebar' auto / 1fr;
		}
	}

	&__slider {
		grid-area slider;
		width 100%;
	}

	&__tabs {
		grid-area tabs;
		notLastChildMargin 0 0 20px 0;
	}

	&__tab-buttons {
		notLastChildMargin 0 10px 10px 0;

		@media (max-width 426px) {
			text-align center;
		}
	}

	&__tabs-btn {
	}

	&__tab-data {
	}

	&__sidebar {
		grid-area sidebar;
	}
}

.product-slider {
	&__pag >* {
		background #fff !important;
		padding 14px;
		opacity .5 !important;
		transition all .2s ease;

		@media (max-width 1600px) {
			padding 8px;
		}

		&.swiper-pagination-bullet-active {
			opacity 1 !important;
		}
	}
}

